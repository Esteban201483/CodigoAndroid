<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sistema.pruebatcu1.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola Mundo"
        android:id="@+id/textView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="172dp">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:id="@+id/btnLetra1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="33dp"
            android:onClick="redireccionarVista" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B"
            android:id="@+id/btnLetra2"
            android:layout_alignBottom="@+id/btnLetra1"
            android:layout_toRightOf="@+id/btnLetra1"
            android:layout_toEndOf="@+id/btnLetra1"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:onClick="redireccionarVista" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:id="@+id/btnLetra3"
            android:layout_alignBottom="@+id/btnLetra2"
            android:layout_toRightOf="@+id/btnLetra2"
            android:layout_toEndOf="@+id/btnLetra2"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:onClick="redireccionarVista" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D"
            android:id="@+id/btnLetra4"
            android:layout_alignTop="@+id/btnLetra3"
            android:layout_toRightOf="@+id/btnLetra3"
            android:layout_toEndOf="@+id/btnLetra3"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:onClick="redireccionarVista" />

    </RelativeLayout>

</RelativeLayout>
